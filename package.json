{
  "name": "tekana-ewallet",
  "version": "0.0.1",
  "description": "Tekana-eWallet is a world wide solution that is used by anyone to transfer money to friends, families, etc.. instantly.",
  "author": "Emmanuel Hakorimana",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "nest start --watch",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --config ./jest.config.js --collectCoverage --coverageDirectory=\"./coverage\" --ci --reporters=default --reporters=jest-junit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "yarn db:reset:force && jest -i --config ./test/jest-e2e.json --verbose",
    "test:migration": "yarn db:reset:force && jest -i --config ./prisma/data-migrations/jest-migrations.json --verbose",
    "docker:up": "docker-compose up --build"
  },
  "dependencies": {
    "@fastify/cors": "7.0.0",
    "@fastify/formbody": "6.0.0",
    "@nestjs/axios": "^0.0.8",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.2.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/event-emitter": "^1.1.1",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.1.1",
    "@nestjs/platform-fastify": "^8.4.0",
    "@nestjs/platform-socket.io": "^9.2.0",
    "@nestjs/swagger": "^5.2.0",
    "@prisma/client": "^3.14.0",
    "@types/passport-oauth2": "^1.4.11",
    "@types/ramda": "^0.28.1",
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "express": "^4.17.3",
    "fastify": "^3.27.2",
    "fastify-cookie": "^5.6.0",
    "fastify-swagger": "^4.17.0",
    "joi": "^17.6.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "jest-junit": "^14.0.0",
    "prettier": "^2.5.1",
    "prisma": "^3.14.0",
    "source-map-support": "^0.5.20",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5",
    "webpack": "^5.70.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
